
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Welcome Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:textColor="#ff000000"
        android:textSize="24dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textAlignment="center"
        android:padding="10dp"
        android:backgroundTint="#fffcb22d"/>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <RadioGroup
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/radioGroup1"
            android:layout_marginRight="73.5dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAPER"
                android:id="@+id/rbnPaper" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCISSORS"
                android:id="@+id/rbnScissors" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROCK"
                android:id="@+id/rbnRock" />
        </RadioGroup>
        <TextView
            android:text="Text Message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtMainMsg" />

    </LinearLayout>
    <Button
        android:text="PLAY!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPlay" />
    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imgAnswer"
        android:scaleType="fitXY" />

</LinearLayout>